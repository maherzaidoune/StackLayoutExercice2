<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StackLayoutExercice2.exercice">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Padding="10">
                <Label Text="nyc_photographer"/>
            </StackLayout>
            <Image Source="https://www.goway.com/media/cache/d9/2e/d92e279d13adc61122837a927346b8d1.jpg" />
            <StackLayout  Orientation="Horizontal" Spacing="20" Padding="10">
                <Button Text="Like" />
                <Button Text="Comment" />
                <Button Text="Share" />
            </StackLayout>
            <StackLayout Padding="10">
                <BoxView HeightRequest="1"  Color="#f0f0f0" />
                <Label Text="700 Likes"  FontAttributes="Bold" TextColor="Blue"/>
                <Label Text="this is shot yesterday in tunisia " />
            </StackLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>